$debug = true

$usn-x-small         = 200px
$usn-small           = 400px
$usn-small-medium    = 600px
$usn-medium          = 800px
$usn-large-medium    = 1000px
$usn-large           = 1200px
$usn-x-large         = 1400px

$mq-sync = usn-x-small        $usn-x-small,
           usn-small          $usn-small,
           usn-small-medium   $usn-small-medium,
           usn-medium         $usn-medium,
           usn-large-medium   $usn-large-medium,
           usn-large          $usn-large,
           usn-x-large        $usn-x-large

my-colors = usn-x-small       $usn-x-small,
            usn-small         $usn-small

for mq in $mq-sync
  @media screen and (min-width: pair[1])
    body
      background-color white
  .{mq[0]}
    color mq[1]